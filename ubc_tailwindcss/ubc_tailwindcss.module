<?php

/**
 * Implements HOOK_page_attachments
 */
function ubc_tailwindcss_page_attachments(array &$page) {
  // if the page is an admin route, don't load the library
  $is_admin = \Drupal::service('router.admin_context')->isAdminRoute();
    if (!$is_admin) {
      $page['#attached']['library'][] = 'ubc_tailwindcss/tailwindcss';
      return;
    }
}
